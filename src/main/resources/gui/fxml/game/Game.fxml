<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="anchorPane" stylesheets="@../../css/base-style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pubstones.gui.controller.game.GameController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="stoneLineHBox" />
                  <HBox>
                     <children>
                        <Button fx:id="placeLeftButton" mnemonicParsing="false" onAction="#placeLeftButtonClicked" text="Place Left" />
                        <HBox fx:id="stoneLineHBox" prefHeight="100.0" prefWidth="200.0" />
                        <Button fx:id="placeRightButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#placeRightButtonClicked" text="Place Right" />
                     </children>
                  </HBox>
                  <Label layoutX="10.0" layoutY="10.0" text="symbolsHBox" />
                  <HBox fx:id="symbolsHBox" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" />
                  <Label layoutX="10.0" layoutY="33.0" text="scoresVBox" />
                  <VBox fx:id="scoresVBox" prefHeight="200.0" prefWidth="100.0" />
                  <Label layoutX="10.0" layoutY="50.0" text="stonePileHBox" />
                  <HBox fx:id="stonePileHBox" layoutX="10.0" layoutY="54.0" prefHeight="100.0" prefWidth="200.0" />
                  <Label layoutX="10.0" layoutY="160.0" text="playerActionsHBox" />
                  <HBox fx:id="playerActionsHBox" layoutX="10.0" layoutY="80.0" prefHeight="100.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" onAction="#fireButtonClicked" text="Fire" />
                  <Label fx:id="currentPlayerLabel" text="Current Player" />
                  <Label fx:id="winnerLabel" layoutX="10.0" layoutY="193.0" text="Winner" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#backButtonClicked" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
