<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="anchorPane" stylesheets="@../../css/base-style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pubstones.gui.controller.game.GameController">
   <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <Label text="Stone Line">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Label>
                  <HBox fx:id="stoneLineHBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" />
                  <Label layoutX="10.0" layoutY="10.0" text="Symbols" />
                  <HBox fx:id="symbolsHBox" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" />
                  <Label layoutX="10.0" layoutY="33.0" text="Score" />
                  <VBox fx:id="scoresVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" />
                  <Label layoutX="10.0" layoutY="50.0" text="Pool" />
                  <HBox fx:id="stonePileHBox" alignment="CENTER" layoutX="10.0" layoutY="54.0" prefHeight="100.0" prefWidth="200.0" />
                  <Label layoutX="10.0" layoutY="160.0" text="Moves" />
                  <HBox fx:id="playerActionsHBox" alignment="CENTER" layoutX="10.0" layoutY="80.0" prefHeight="100.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" onAction="#fireButtonClicked" text="Finish Move">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></Button>
                  <Label fx:id="currentPlayerLabel" text="Current Player" />
                  <Label fx:id="winnerLabel" layoutX="10.0" layoutY="193.0" text="Winner" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#backButtonClicked" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
